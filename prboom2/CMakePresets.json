{
  "version": 3,
  "configurePresets": [
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/../build",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "dist",
      "binaryDir": "${sourceDir}/../build/dist",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "dist",
      "configurePreset": "dist"
    }
  ]
}
